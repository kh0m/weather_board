
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBqUvtKyUKVKHvm5Ro2s7ZaVSIZqHXhHWc&libraries=places"></script>

<script>
  function initialize() {
    var input = document.getElementById('search');
    var autocomplete = new google.maps.places.Autocomplete(input);
  }
  google.maps.event.addDomListener(window, 'load', initialize);
</script>


<div class="row">
  <div class="col-sm-4 text-center">
    <%= react_component('WeatherPanel', cityName: "New York", latitude: 40.7128, longitude: 74.0059, time: Time.new().to_i) %>
  </div>
  <div class="col-sm-4 text-center">
    <%= react_component('WeatherPanel', cityName: "London", latitude: 51.5074, longitude: 0.1278, time: Time.new().to_i) %>
  </div>
  <div class="col-sm-4 text-center">
    <%= react_component('WeatherPanel', cityName: "Hong Kong", latitude: 22.3964, longitude: 114.1095, time: Time.new().to_i) %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_tag cities_show_path, :method => 'get', class: 'input-group'  do %>
      <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Enter a city...' %>
      <span class="input-group-btn">
        <%= submit_tag "search", class: "btn btn-default" %>
      </span>
    <% end %>
  </div>
</div>




