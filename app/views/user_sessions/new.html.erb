<h1>Login</h1>
<div class="row">
  <div class="col-sm-4">
    <%= form_for @user_session, url: { :action => "create" } do |f| %>
    <%= render 'shared/errors', object: @user_session %>
    <%= f.label :login %><br />
    <%= f.text_field :login, class: 'form-control' %><br />
    <br />
    <%= f.label :password %><br />
    <%= f.password_field :password, class: 'form-control' %><br />
    <br />
    <%= f.check_box :remember_me %> <%= f.label :remember_me %><br />
    <br />
    <%= f.submit "Login", class: 'btn btn-primary' %>
    <% end %>

    <br/>
    <%= link_to "Sign up", new_user_path ,html: {class: "btn btn-primary"} %>

  </div>
</div>
